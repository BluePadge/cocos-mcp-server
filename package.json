{
    "$schema": "./@types/schema/package/index.json",
    "package_version": 2,
    "name": "cocos-mcp-server",
    "version": "2.0.0",
    "author": "LiDaxian",
    "editor": ">=3.8.6",
    "scripts": {
        "preinstall": "node ./scripts/preinstall.js",
        "clean:dist": "node ./scripts/clean-dist.js",
        "build": "node ./scripts/clean-dist.js && tsc",
        "watch": "tsc -w",
        "mcp:stdio": "node ./dist/stdio-http-bridge.js",
        "smoke:mcp:online": "node ./scripts/mcp-online-smoke.js",
        "test:mcp": "node ./dist/test/mcp-protocol-compliance-test.js && node ./dist/test/mcp-streamable-http-test.js && node ./dist/test/mcp-stdio-bridge-test.js && node ./dist/test/next-manifest-test.js && node ./dist/test/next-workflow-test.js && node ./dist/test/next-capability-probe-test.js && node ./dist/test/next-router-test.js && node ./dist/test/next-router-advanced-tools-test.js && node ./dist/test/next-diagnostic-tools-test.js && node ./dist/test/next-runtime-control-tools-test.js"
    },
    "description": "i18n:cocos-mcp-server.description",
    "main": "./dist/main.js",
    "dependencies": {
        "fs-extra": "^11.3.0",
        "uuid": "^9.0.1",
        "vue": "^3.1.4"
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.7",
        "@types/fs-extra": "^9.0.5",
        "@types/node": "^18.17.1",
        "@types/uuid": "^9.0.8",
        "typescript": "^5.8.2"
    },
    "panels": {
        "default": {
            "title": "i18n:cocos-mcp-server.panel_title",
            "type": "dockable",
            "main": "dist/panels/default",
            "icon": "./static/icon.png",
            "size": {
                "min-width": 400,
                "min-height": 300,
                "width": 600,
                "height": 500
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "i18n:menu.extension/Cocos MCP Server",
                "label": "i18n:cocos-mcp-server.open_panel",
                "message": "open-panel"
            }
        ],
        "messages": {
            "open-panel": {
                "methods": [
                    "openPanel"
                ]
            },
            "start-server": {
                "methods": [
                    "startServer"
                ]
            },
            "stop-server": {
                "methods": [
                    "stopServer"
                ]
            },
            "get-server-status": {
                "methods": [
                    "getServerStatus"
                ]
            },
            "update-settings": {
                "methods": [
                    "updateSettings"
                ]
            },
            "get-server-settings": {
                "methods": [
                    "getServerSettings"
                ]
            }
        }
    }
}
